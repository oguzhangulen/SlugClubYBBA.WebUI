@model SlubClubYBBA.WebUI.Models.MusteriModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Bootstrap core CSS-->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">

</head>

<body class="bg-dark" style="background-image:url(../../fonts/238916-city-sunset.jpg);background-repeat:no-repeat;">

    <div class="container">
        <div class="card card-login mx-auto mt-5" style="max-width:300px;">
            <div class="card-header">Login</div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
                {
                <form>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.TCKN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.TCKN, new { htmlAttributes = new { @class = "form-control", @maxlength = "11", @minlength = "11", @placeholder = "TCKN" } })
                        @Html.ValidationMessageFor(model => model.TCKN, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ad", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.Soyad, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Soyad", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Soyad, "", new { htmlAttributes = new { @class = "text-danger" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.Sifre, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Şifre", @type = "password", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Sifre, "", new { htmlAttributes = new { @class = "text-danger" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TelNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.TelNo, "", new { htmlAttributes = new { @class = "form-control", @maxlength = "11", @placeholder = "Tel No",@minlength="11"} })
                        @Html.ValidationMessageFor(model => model.TelNo, "", new { htmlAttributes = new { @class = "text-danger" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EPosta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.EPosta, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "EPosta", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.EPosta, "", new { htmlAttributes = new { @class = "text-danger" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control", @placeholder = "Adres", rows = 10 } })
                        @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kayıt Ol" class="btn btn-lg btn-success btn-block" />
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Giriş Yap", "Login", null, new { @class = "btn btn-lg btn-primary btn-block" })
                    </div>
                </form>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
</body>

</html>